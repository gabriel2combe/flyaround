{% extends 'base.html.twig' %}
{% block body %}
<table>
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ review.id }}</td>
        </tr>
        <tr>
            <th>User Rated</th>
            <td>{{ review.userRated }}</td>
        </tr>
        <tr>
            <th>Review Author</th>
            <td>{{ review.reviewAuthor }}</td>
        </tr>
        <tr>
            <th>Text</th>
            <td>{{ review.text }}</td>
        </tr>
        <tr>
            <th>Publication date</th>
            <td>{{ review.publicationDate|date('Y.m.d') }}</td>
        </tr>
        <tr>
            <th>Note</th>
            <td>{{ review.note }}</td>
        </tr>

    </tbody>

    <ul>
        <li>
            <a href="{{ path('review_index') }}">Back to the review list</a>
        </li>
        <li>
            <a href="{{ path('review_edit', { 'id': review.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

</table>

{% endblock %}